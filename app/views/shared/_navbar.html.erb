<header>
  <div class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to welcome_index_path, class: 'navbar-brand' do %>
          <%= render 'shared/rr_logo' %>
        <% end -%>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
          <li class="<%= is_active?(surveys_path) %>">
            <%= link_to surveys_path, target: :_top  do %>
            Missões
            <span class='badge'> <%= surveys_count %> </span>
            <% end -%>
          </li>
          <% end -%>
          <% if user_signed_in? and current_user.teacher?%>
            <li class="dropdown <%= is_active?(new_survey_path) %>">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Criar Missão <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li> <%= link_to 'Múltipla Escolha', new_survey_path(type: 'multiplechoice'), target: :_top  %> </li>
              </ul>
            </li>
          <% end %>
        </ul>
          <ul class="nav navbar-nav navbar-right">

            <% unless user_signed_in? %>
            <li>
              <p class="navbar-text">
                <%= link_to "Criar astronauta", new_user_registration_path, target: :_top  %>
              </p>
            </li>
            <li>
              <p class="navbar-text">
                <%= link_to "Entrar", new_user_session_path, target: :_top  %>
              </p>
            </li>
            <% end %>

            <% if user_signed_in? %>
            <li>
              <p class="navbar-text">
                <%= current_user.username %>
              </p>
              <p class="navbar-text">
                <%= link_to "Sair", destroy_user_session_path, target: :_top  %>
              </p>
            </li>
            <% end %>

          </ul>
      </div>
    </div>
  </div>
</header>
