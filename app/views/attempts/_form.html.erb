<h2 class="survey-title">
  <%= @survey.name %>
  <p><small><%= @attempt.survey.description %></small></p>
</h2>


<% @steps = ['Start order', 'Prepare gift', 'Pack gift', 'Decorate box', 'Send gift'] %>
<div class="progress">
  <div class="progress_inner">
    <% get_answer_fields(@attempt).each_with_index  do |step, i| %>
      <div class="progress_inner__step">
        <label for="step-<%= i + 1 %>"></label>
      </div>
    <% end %>
    <input checked="checked" id="step-1" name="step" type="radio"></input>
    <% (1..4).each_with_index  do |i| %>
      <input id="step-<%= i + 1 %>" name="step" type="radio"></input>
    <% end %>
    <div class="progress_inner__bar"></div>
    <div class="progress_inner__bar--set"></div>
    <!-- <div class="progress_inner__tabs"> -->
    <%= form_for(@attempt, url: attempt_scope(@attempt), html: {class: 'progress_inner__tabs'}) do |f| %>


        <%= hidden_field_tag :survey_id, @survey.id %>
          <%= f.fields_for :answers, get_answer_fields(@attempt) do |answer_fields| %>
              <% question = answer_fields.object.question %>
              <div class="tab-<%= answer_fields.index %> tab">
                    <h3><span class="label label-warning" id="qid"><%= question.id %></span> <%= question.text %></h3>
                    <div class="image-question">
                      <%= image_tag question.image.url(:big) %>
                    </div>
                    <div class="attempt-options">
                      <div class="quiz" id="quiz" data-toggle="buttons">
                        <%= collection_radio_buttons('survey_attempt[answers_attributes]', question.id, question.options, :id, :text) do |b| %>
                        <label class="element-animation1 btn btn-lg btn-primary btn-block">
                          <span class="btn-label">
                            <i class="fa fa-chevron-right"></i>
                          </span>
                          <%= b.radio_button %> <%= b.text %>
                        </label>
                        <% end %>
                      </div>
                    </div>
                    <div class="modal-footer text-muted">
                      <span id="answer"></span>
                    </div>
                  </div>
            <% end -%>



            <div class="row">
              <div class="col-md-2 col-md-offset-5">
                <%= f.submit "Enviar", class: 'btn btn-lg btn-danger' %>
              </div>
            </div>
      <% end -%>











    <!-- </div> -->



    <div class="progress_inner__status">
      <div class="box_base"></div>
      <div class="box_lid"></div>
      <div class="box_ribbon"></div>
      <div class="box_bow">
        <div class="box_bow__left"></div>
        <div class="box_bow__right"></div>
      </div>
      <div class="box_item"></div>
      <div class="box_tag"></div>
      <div class="box_string"></div>
    </div>
  </div>
</div>
