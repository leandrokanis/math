<div class="container">
  <% if @survey.nil? %>
    <p>
      Esta pesquisa já não está disponível
    </p>
  <% elsif @survey.avaliable_for_participant?(@participant) %>
    <%= render 'form' %>
  <% else %>
    <p>
      Você gastou todas as tentativas possíveis para responder esta Pesquisa
    </p>
    <p>
      <%= link_to delete_user_attempts_path(@survey.id, session[:user_id]), method: :delete do %>
        Clique aqui para reiniciar as tentativas
      <% end %>
    </p>
  <% end -%>
</div>
