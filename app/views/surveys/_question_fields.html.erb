<div class='field clearfix'>
  <hr/>
  <h4>Questão  <%= f.object.id %></h4>

  <div class='row'>
    <div class='form-group col-sm-12'>
      <%= f.label :text, class: 'sr-only' %>
      <%= f.text_field :text, placeholder: 'Pergunta', class: 'form-control' %>
    </div>

    <div class='form-group col-sm-12'>
      <%= image_tag f.object.image(:medium) %>
      <%= f.label :image, class: 'sr-only' %>
      <%= f.file_field :image, placeholder: 'Imagem', class: 'form-control' %>
    </div>

  </div>
  <ol class='appendable'>
    <%= f.fields_for :options do |builder| %>
      <%= render 'option_fields', :f => builder %>
    <% end -%>
  </ol>
  <%= link_to_add_field 'Adicionar opção', f, :options %>
  <%= link_to_remove_field 'Remover questão', f %>
</div>
