<div class="container">
  <div class="row questionnaires_<%= action_name %>">
    <h1><%= @lesson.name %></h1>
    <div class="col-md-10 col-md-offset-1">
      <% if @surveys.empty? %>
        <p>Ainda não há missões neste planeta.</p>
      <% else %>
        <h2>Missões</h2>
        <div class="row">
          <%= render partial: 'survey', collection: @surveys %>
        </div>
        <%= paginate @surveys %>
      <% end %>
    </div>
  </div>
</div>
